@page
@model SalonWeb.Pages.Frizeri.IndexModel

@{
    ViewData["Title"] = "Lista Frizeri";
}

<h1>Lista Frizeri</h1>

<p>
    <a asp-page="Create">Frizer Nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Frizer[0].FrizerNume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Frizer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FrizerNume)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
