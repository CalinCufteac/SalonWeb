@page "/{id:int?}"
@model SalonWeb.Pages.Programari.IndexModel

@{
    ViewData["Title"] = "Programare Tuns";
}

<h1>Lista Programari</h1>

<p>
    <a asp-page="Create">Programare Noua</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Notite)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Programare[0].Ziua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Frizer.FrizerNume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].ProgramareTips)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProgramareD.Programari)
        {
            string selectedRow = "";
            if (item.ID == Model.ProgramareID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">

            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ziua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frizer.FrizerNume)
            </td>
            <td>
                @{
                    foreach (var tip in item.ProgramareTips)
                    {
                        @tip.Tip.ID @: @tip.Tip.TipTuns <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
